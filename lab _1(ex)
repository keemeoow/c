// 프개 연습문제 1-4(ex)

#include <stdio.h> // <>안의 라이브러리(stdio.h는 가장 표준)를 가져옴

main()
{
    float fahr, celsius;
    int lower,upper, step;
    
    lower = 0;
    upper = 300;
    step = 20;
    fahr = lower;
    
    printf("    C   F\n\n");
    while (fahr<=upper){
        celsius = (5.0/9.0)*(fahr-32
        fahr = (9.0/5.0)*celsius+32
        printf("%3.0f %6.1f\n", celsius, fahr);
        celsius = celsius + step;
    }
}
